        <!--android:layout_alignParentStart="true" />-->



    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_proteins"
        android:spinnerMode="dropdown"
        android:entries="@array/proteins"
        android:layout_above="@+id/spinner_veg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="25dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_sides"
        android:spinnerMode="dropdown"
        android:entries="@array/sides"
        android:layout_below="@+id/spinner_veg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_veg"
        android:spinnerMode="dropdown"
        android:entries="@array/veg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_drinks"
        android:spinnerMode="dropdown"
        android:entries="@array/drinks"
        android:layout_above="@+id/checkout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkout"
        style="?android:borderlessButtonStyle"
        android:src="@drawable/checkout_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/checkout_btn" />
</RelativeLayout>
